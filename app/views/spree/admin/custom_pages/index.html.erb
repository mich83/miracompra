<% content_for :page_title do %>
  <%= Spree.t(:listing_custom_pages) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_custom_page), new_object_url, icon: 'plus', id: 'admin_new_custom_page_link' %>
  </li>
<% end %>

<table class="index" id="listing_custom_pages" width="300px" data-hook>
  <colgroup>
    <col style="width: 85%">
    <col style="width: 15%">
  </colgroup>
  <thead>
    <tr data-hook="admin_custom_pages_index_headers">
      <th><%= t(:name, scope: 'activerecord.attributes.spree/custom_page') %></th>
      <th data-hook="admin_custom_pages_index_header_actions" class="actions"></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @custom_pages.each do |page| %>
      <tr id="<%= spree_dom_id page %>" data-hook="admin_custom_pages_index_rows" class="<%= cycle('odd', 'even')%>">
        <td><%= link_to page.name, edit_object_url(page) %></td>
        <td data-hook="admin_custom_pages_index_row_actions" class="actions">
          <%= link_to_edit page, no_text: true %>
        </td>
        <td class="actions">
          <%= link_to_delete page, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

