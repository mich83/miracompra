<% content_for :page_title do %>
  <%= Spree.t(:editing_invitation) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_invitations_list), collection_url, icon: 'arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_invitation_edit_form_header">
  <%= render 'spree/shared/error_messages', target: @invitation %>
</div>

<div data-hook="admin_invitation_edit_form">
  <%= form_for [:admin, @invitation] do |f| %>
    <%= render 'form', f: f %>

    <div data-hook="admin_invitation_edit_form_buttons">
      <%= render 'spree/admin/shared/edit_resource_links' %>
    </div>
  <% end %>
</div>
