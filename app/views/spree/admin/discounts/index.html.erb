<% content_for :page_title do %>
  <%= Spree.t(:listing_discounts) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_discount), new_object_url, icon: 'plus', id: 'admin_new_discount_link' %>
  </li>
<% end %>

<table class="index" id="listing_discounts" width="300px" data-hook>
  <colgroup>
    <col style="width: 85%">
    <col style="width: 15%">
  </colgroup>
  <thead>
    <tr data-hook="admin_discounts_index_headers">
      <th><%= t(:name, scope: 'activerecord.attributes.spree/discount') %></th>
      <th data-hook="admin_discounts_index_header_actions" class="actions"></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @discounts.each do |discount| %>
      <tr id="<%= spree_dom_id discount %>" data-hook="admin_discounts_index_rows" class="<%= cycle('odd', 'even')%>">
        <td><%= link_to discount.name, edit_object_url(discount) %></td>
        <td data-hook="admin_discounts_index_row_actions" class="actions">
          <%= link_to_edit discount, no_text: true %>
        </td>
        <td class="actions">
          <%= link_to_delete discount, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


