
<div data-hook="admin_discount_form_fields" class="row">
  <div class="form-group">
      <%= f.label :name, :class=>'control-label col-sm-1'%>
      <div class="controls col-sm-11">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <%= error_message_on :discount, :name %>
    </div>
  <br>
  <div class="form-group">
      <%= f.label :value, :class=>'control-label col-sm-1'%>
    <div class="controls col-sm-11">
      <%= f.number_field :value, class: 'form-control' %>
      <%= error_message_on :discount, :message %>
    </div>
  </div>
 </div>
 <div class="form-group">
   <%= f.label :taxon, :class=>'control-label col-sm-1'%>
   <div class="controls col-sm-11">
     <%= f.select :spree_taxon_id, options_for_select(Spree::Taxon.all.collect { |p| [p.name, p.id] }, @discount.spree_taxon_id), {},  autocomplete: 'off' %>
   </div>
 </div>
