<% if target && target.errors.any? %>
    <div id="errorExplanation" class="alert alert-danger alert-dismissible fade in" data-hook>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h2><%= Spree.t(:errors_prohibited_this_record_from_being_saved, :count => target.errors.count) %>:</h2>
      <p><%= Spree.t(:there_were_problems_with_the_following_fields) %>:</p>
      <ul>
        <% target.errors.messages.each_pair do |field, msg_list| %>
            <li><%=Spree.t(field)%>
             <% msg_list.each do |msg| %>
              <%= msg %>
             <% end %>
            </li>
        <% end %>
      </ul>
    </div>
<% end %>
