<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Spree.t(:editing_user) %></h3>
    </div>
    <div class="panel-body">
      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>

      <%= form_for Spree::User.new, :as => @user, :url => spree.user_path(@user), :method => :put, :html => {:class=>"form-horizontal", :role=>"form"} do |f| %>
          <%= render :partial => 'spree/shared/user_edit_form', :locals => { :f => f, :user=>@user } %>
          <p>
            <%= f.submit Spree.t(:update), :class => 'btn btn-primary' %>
          </p>
      <% end %>
    </div>
  </div>
</div>